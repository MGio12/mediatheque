@startuml Component Diagram - Médiathèque

' Configuration
skinparam componentStyle rectangle
skinparam linetype polyline

title Diagramme de Composants - Architecture MVC

' Frontend
package "Frontend" {
  [Navigateur Web] as browser
  [HTML/CSS/JS] as frontend
}

' Backend
package "Backend PHP" {
  [index.php\nRouter] as router

  component "MVC" {
    [Controllers] as ctrl
    [Models] as models
    [Views] as views
  }

  [Auth] as auth
  [Database] as db
}

' Base de données
database "MySQL" as mysql

' Relations principales
browser --> router : HTTP
router --> ctrl
ctrl --> models
ctrl --> views
ctrl ..> auth
models --> db
db --> mysql

note right of router
  Front Controller
  Pattern MVC
end note

note right of db
  Singleton PDO
  Protection SQL
end note

@enduml
